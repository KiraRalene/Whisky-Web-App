<div class = 'form-page'>
  <div class='full-form'>
    <h1 class="block" style="color:#ffa100">Sign In</h1>
    <%= form_tag sessions_path do |f|%>

      <div class = "field form-group ">
        <%= label_tag :email, 'email', class: 'control-label' %>
        <div>
          <%= email_field_tag :email, '', class: 'form-control' %>
        </div>
      </div>

      <div class = "field form-group ">
        <%= label_tag :password, 'password', class: 'control-label' %>
        <div >
          <%= password_field_tag :password, '', class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1">
          <%= submit_tag 'Login', class: 'btn btn-main'  %>
        </div>
      </div>

    <%end%>
  </div>
</div>
