<div class="jumbotron secondary-jumbo">
  <div>
    <h1>Advanced Search</h1>
  </div>
</div>
<div class="padding">
<%= form_for @search do |f|%>
  <div class="row">
    <div class = "field form-group ">
      <%= f.label :keywords, class: 'col-sm-1' %>
      <div class='col-sm-11'>
        <%= f.text_field :keywords, class: 'form-control body-area' %>
      </div>
    </div>

    <div class = "field form-group ">
      <%= f.label :distillery, class: 'col-sm-1' %>
      <div class='col-sm-11'>
        <%= f.text_field :distillery, class: 'form-control body-area' %>
      </div>
    </div>

    <div class = "field form-group ">
      <%= f.label :age, class: 'col-sm-1' %>
      <div class='col-sm-11'>
        <%= f.text_field :age, class: 'form-control body-area' %>
      </div>
    </div>


    <div class = "field form-group ">
      <%= f.label :kind, class: 'col-sm-1' %>
      <div class='col-sm-11'>
        <%= f.text_field :kind, class: 'form-control body-area' %>
      </div>
    </div>

    <div class = "field form-group ">
      <%= f.label :min_price, class: 'col-sm-1' %>
      <div class='col-sm-11'>
        <%= f.text_field :min_price, class: 'form-control body-area' %>
      </div>
    </div>

    <div class = "field form-group ">
      <%= f.label :max_price, class: 'col-sm-1' %>
      <div class='col-sm-11'>
        <%= f.text_field :max_price, class: 'form-control body-area' %>
      </div>
    </div>
  </div>



    <div class="col-sm-1 offset-md-3">
      <%= f.submit class: 'btn btn-main'  %>
    </div>

<%end%>
</div>
