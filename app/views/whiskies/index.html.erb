<div class="jumbotron secondary-jumbo">
  <div>
    <h1>Whiskies</h1>
  </div>
</div>

<div class="main-content ">

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 content">
      <div class="row">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <table class="table ahh">
              <tr>
                <td>All</td>
                <td>Scotch</td>
                <td>Japenese</td>
                <td>American</td>
                <td>Canadian</td>
                <td>Irish</td>
              </tr>
            </table>
          </div>
        </div>


        <%@whiskies.each do |whisky|%>
          <div class="col-sm-4">
            <div class="card">
              <%=image_tag ('aberlour12yr.jpg'), :class=>'card-image'%>
              <div class="card-block">
                <h4><%=link_to whisky.name, whisky_path(whisky)%></h4>

              </div>
            </div>
          </div>
        <%end%>

      </div>
      <%= form_tag whiskies_path, :method  => 'get' do %>
        <%= text_field_tag :search, params[:search]%>
        <%= submit_tag "Search", :class=>"btn "%>
      <%end%>
    </div>
  </div>
</div>
