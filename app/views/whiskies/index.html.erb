<div class="jumbotron secondary-jumbo">
  <div>
    <h1 class="fade-in">Whiskies</h1>
  </div>
</div>

<div class="main-content ">

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 content">
      <div class="row">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <table class="table ahh">
              <tr>
                <td>All</td>
                <td>Scotch</td>
                <td>Japenese</td>
                <td>American</td>
                <td>Canadian</td>
                <td>Irish</td>
              </tr>
            </table>
          </div>
        </div>

        <div class="row row-eq-height">
          <%@whiskies.each do |whisky|%>
            <div class="col-sm-4 ">
              <div class="card">
                <%if whisky.image.thumb.url%>
                  <%=image_tag whisky.image.thumb.url, :class=>'card-image img-zoom'%>
                <%else%>
                  <%=image_tag ("aberlour12yr.jpg") , :class=>'card-image img-zoom'%>
                <%end%>
                <div class="card-block">
                  <h4><%=link_to whisky.name, whisky_path(whisky)%></h4>

                </div>
              </div>
            </div>
          <%end%>
        </div>

      </div>
      <%= form_tag whiskies_path, :method  => 'get' do %>
        <%= text_field_tag :search, params[:search]%>
        <%= submit_tag "Search", :class=>"btn "%>
      <%end%>
    </div>
  </div>
</div>
