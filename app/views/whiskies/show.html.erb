

<div class="main-content">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 content">

      <div class="row">
        <div class="col-sm-5 padding">
          <%if @whisky.image.main.url%>
            <%=image_tag @whisky.image.main.url , :class=>'whisky-bottle'%>
          <%else%>
            <%=image_tag ("aberlour12yr.jpg") , :class=>'whisky-bottle'%>
          <%end%>
        </div>
        <div class="col-sm-7 padding">
          <div class="description">
            <h2><%=@whisky.name%></h2>
            <%if @rating %>
            <div class="flex">
              <h3>Rating: </h3>
              <h3> <%=@rating%></h3>
            </div>
            <%end%>
            <p> <%=@whisky.details%></p>

            <a href="#" data-toggle="modal" data-target="#note-modal" class="btn btn-second">
            Add note
            </a>
          </div>
        </div>
      </div>

      <div class="row ahh">
        <div class="col-xs-10 col-xs-offset-1">
          <table class="table">
            <tr>
              <td>Cask: <%=@whisky.cask%></td>
              <td>Type: <%=@whisky.kind%></td>
              <td>ABV: <%=@whisky.abv%> %</td>
              <td>Age: <%=@whisky.age%>yrs</td>
            </tr>
          </table>
        </div>
      </div>


      <div class="notes">



        <div id="note-modal" class="modal fade modal-style" role="dialog">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">

              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><%=@whisky.name%></h4>
              </div>

              <div class="modal-body ">
                <%= form_for [@whisky, @note] do |f|%>
                  <div class="field form-group">
                    <%= f.label :rating, class: 'control-label' %>
                    <%= f.number_field :rating, class: 'form-control' %>
                  </div>

                  <div class="field form-group">
                    <%= f.label :color, class: 'control-label' %>
                    <%= f.text_field :color, class: 'form-control' %>
                  </div>

                  <div class="field form-group">
                    <%= f.label :nose, class: 'control-label' %>
                    <%= f.text_field :nose, class: 'form-control' %>
                  </div>

                  <div class="field form-group">
                    <%= f.label :palate, class: 'control-label' %>
                    <%= f.text_field :palate, class: 'form-control' %>
                  </div>

                  <div class="field form-group">
                    <%= f.label :description, class: 'control-label' %>
                    <%= f.text_field :description, class: 'form-control' %>
                  </div>

                  <div class="field form-group">
                    <%= f.label :price, class: 'control-label' %>
                    <%= f.number_field :price, class: 'form-control' %>
                  </div>
                  <%= f.submit class: 'btn btn-main'  %>
                <%end%>


              </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
